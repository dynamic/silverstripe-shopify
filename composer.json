{
    "name": "dynamic/silverstripe-shopify",
    "description": "A Shopify Store module for Silverstripe",
    "license": "BSD-3-Clause",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "CMS",
        "Shopify",
        "Ecommerce",
        "BuyButton"
    ],
    "authors": [
        {
            "name": "Dynamic",
            "email": "dev@dynamicagency.com",
            "homepage": "https://www.dynamicagency.com"
        }
    ],
    "require": {
        "bramdeleeuw/silverstripe-schema": "^2.0",
        "littlegiant/silverstripe-catalogmanager": "^5.2",
        "osiset/basic-shopify-api": "^10.0",
        "silverstripe/recipe-cms": "^4.5",
        "symbiote/silverstripe-gridfieldextensions": "^3.0"
    },
    "require-dev": {
        "silverstripe/recipe-testing": "^2"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Dynamic\\Shopify\\": "src/",
            "Dynamic\\Shopify\\Test\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/vendor-plugin": true,
            "silverstripe/recipe-plugin": true
        },
        "process-timeout": 600
    },
    "extra": {
        "expose": [
            "client"
        ]
    }
}
